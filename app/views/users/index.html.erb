<div class="row">
<p id="notice"><%= notice %></p>
</div>
<div class="row">
<h1>Listing Users</h1>
</div>
<table class="table">
  <thead>
    <tr>
        <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>
          <% if user.id == @current_user.id %>
            <%= link_to 'Show', user, class: "btn btn-primary" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
