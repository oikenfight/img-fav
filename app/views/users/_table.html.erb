<table class="table">
  <caption><%= title %></caption>
  <thead>
  <tr>
    <th>title</th>
    <th>Image</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% images.each do |image| %>
      <tr>
        <td><%= image.title %></td>
        <td><%= image_tag(image.authenticated_image_url(:thumb)) if image.data.present? %></td>
        <td><%= link_to 'Show', image, class: "btn btn-primary" %></td>
      </tr>
  <% end %>
  </tbody>
</table>